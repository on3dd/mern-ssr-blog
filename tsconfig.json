{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    // "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@root/*": ["./*"],
      "@src/*": ["./src/*"],
      "@client/*": ["./src/client/*"],
      "@components/*": ["./src/client/components/*"],
      "@layouts/*": ["./src/client/layouts/*"],
      "@screens/*": ["./src/client/screens/*"],
      "@typesdir/*": ["./src/client/types/*"],
      "@styles/*": ["./src/client/styles/*"],
      "@actions/*": ["./src/client/actions/*"],
      "@reducers/*": ["./src/client/reducers/*"],
      "@store/*": ["./src/client/store/*"],
      "@router/*": ["./src/client/router/*"],
      "@server/*": ["./src/server/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src"]
}
